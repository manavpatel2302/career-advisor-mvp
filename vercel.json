{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/auth/google",
      "methods": ["POST"],
      "dest": "/api/index.py"
    },
    {
      "src": "/auth/linkedin",
      "methods": ["POST"],
      "dest": "/api/index.py"
    },
    {
      "src": "/auth/linkedin/exchange",
      "methods": ["POST"],
      "dest": "/api/index.py"
    },
    {
      "src": "/auth/linkedin/callback",
      "dest": "/api/index.py"
    },
    {
      "src": "/auth/logout",
      "methods": ["POST"],
      "dest": "/api/index.py"
    },
    {
      "src": "/auth/check",
      "methods": ["GET"],
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
